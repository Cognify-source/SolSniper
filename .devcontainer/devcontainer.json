// .devcontainer/devcontainer.json – Codespaces config for Solana sniperbot
{
  "name": "solana-sniperbot",

  // 1. Base image: Node 18 + npm/yarn pre‑installed
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18-bullseye",

  // 2. Extra feature layers (Python, common utils)
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true
    }
  },

  // 3. Commands after container is ready – single shell string
  "postCreateCommand": "bash -c 'curl -sSf https://release.solana.com/v1.18.8/install | bash -s -- -y && echo \"export PATH=\\$HOME/.local/share/solana/install/active_release/bin:\\$PATH\" >> $HOME/.bashrc && npm install --save-dev jest @jest/globals'",

  // 4. VS Code customisations in Codespace
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "solana-labs.solana-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true
      }
    }
  },

  // 5. Workspace
  "workspaceFolder": "/workspace",
  "remoteUser": "node",

  // 6. Forward local test-validator port
  "forwardPorts": [8899]
}
